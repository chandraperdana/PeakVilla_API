@using Microsoft.AspNetCore.Components
@model IEnumerable<PeakVilla_Web.Models.Dto.VillaDTO>

<img class="d-block w-100" src="images/home/slide1.jpg" alt="" />

<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach (var villa in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius: 20px; border: 1px solid #593196">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px" src="@villa.ImageUrl" alt="First Slide" />
                </div>
                <div class="col-8">
                    <p class="card-title text-primary" style="font-size:xx-large">@villa.Name</p>
                    <p class="card-text"> 
                        @((MarkupString)villa.Details)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="col-4">
                            <a href="" class="btn btn-primary form-control btn-block">Book</a>
                        </div>
                        <div class="col-4">
                            <span class="">Max Occupancy : @villa.Occupancy adults </span><br>
                            <span class="pt-1">Villa Siza : @villa.Sqft sqft</span><br>
                        </div>
                        <div class="col-4">
                            <span class="text-primary float-end font-weight-bold pt-1" style="font-size: 25px;">
                                IDR
                                <span style="border-bottom: 1px solid #593196">
                                    @villa.Rate.ToString("c")
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>